---
import { Wrap } from 'styled-system/jsx';
import { useTranslations, validateLocale } from '~/i18n/utils';
import { Link } from '../ui/link';
import { Text } from '../ui/text';

const locale = validateLocale(Astro.params.locale) ? Astro.params.locale : 'en';
const t = useTranslations(locale);
---

<Wrap
  _print={{ display: 'none' }}
  w="full"
  py="2"
  px="2"
  justifyContent="center"
  borderTop="1px solid"
  borderTopColor="border.subtle"
  _print={{ display: 'none' }}
>
  <Text>{t('common.copyright')}</Text>
  <Text>|</Text>
  <Link target="_blank" rel="noreferrer" href="https://github.com/hamzaabamboo/ham-san.net"
    >{t('common.view-source')}</Link
  >
</Wrap>
