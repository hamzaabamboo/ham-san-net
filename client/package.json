{
	"name": "ham-san-net",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"sync": "svelte-kit sync",
		"start": "node --experimental-loader ./scripts/loader.js -r dotenv/config build",
		"codegen": "graphql-codegen",
		"codegen:prod": "graphql-codegen -c codegen.prod.yml",
		"build:prod": "pnpm codegen:prod && pnpm build"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^3.3.1",
		"@graphql-codegen/typescript-graphql-request": "^4.5.9",
		"@graphql-codegen/typescript-operations": "^3.0.4",
		"@playwright/test": "^1.36.1",
		"@sveltejs/adapter-auto": "^1.0.3",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.22.3",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vite-pwa/sveltekit": "^0.1.3",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"graphql-codegen-svelte-apollo": "^1.1.0",
		"postcss": "^8.4.26",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"rollup-plugin-visualizer": "^5.9.2",
		"sass": "^1.64.0",
		"svelte": "^3.59.2",
		"svelte-carousel": "^1.0.25",
		"svelte-check": "^3.4.6",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.0",
		"typescript": "^4.9.5",
		"vite": "^4.4.5",
		"vite-imagetools": "^4.0.19",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"dependencies": {
		"@apollo/client": "^3.7.17",
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@types/remove-markdown": "^0.3.1",
		"date-fns": "^2.30.0",
		"dotenv": "^16.3.1",
		"fets": "^0.4.6",
		"graphql": "^16.7.1",
		"graphql-request": "5.1.0",
		"graphql-tag": "^2.12.6",
		"lodash": "^4.17.21",
		"remove-markdown": "^0.5.0",
		"svelte-apollo-client": "^0.1.4",
		"svelte-fa": "^3.0.4",
		"svelte-inview": "^3.0.4",
		"svelte-markdown": "^0.2.3",
		"sveltekit-i18n": "^2.4.2",
		"vite-plugin-pwa": "^0.14.7"
	}
