{
	"name": "ham-san-net",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "svelte-kit sync",
		"start": "node --experimental-loader ./scripts/loader.js -r dotenv/config build",
		"codegen": "graphql-codegen",
		"codegen:prod": "graphql-codegen -c codegen.prod.yml",
		"build:prod": "pnpm codegen:prod && pnpm build"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^3.3.1",
		"@graphql-codegen/typescript-graphql-request": "^4.5.9",
		"@graphql-codegen/typescript-operations": "^3.0.4",
		"@playwright/test": "^1.33.0",
		"@sveltejs/adapter-auto": "^1.0.3",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"@vite-pwa/sveltekit": "^0.1.3",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"graphql-codegen-svelte-apollo": "^1.1.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"rollup-plugin-visualizer": "^5.9.0",
		"sass": "^1.62.1",
		"svelte": "^3.59.1",
		"svelte-carousel": "^1.0.25",
		"svelte-check": "^3.3.2",
		"svelte-preprocess": "^5.0.3",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.3.5",
		"vite-imagetools": "^4.0.19",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"dependencies": {
		"@apollo/client": "^3.7.14",
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"date-fns": "^2.30.0",
		"dotenv": "^16.0.3",
		"graphql": "^16.6.0",
		"graphql-request": "5.1.0",
		"graphql-tag": "^2.12.6",
		"lodash": "^4.17.21",
		"svelte-apollo-client": "^0.1.4",
		"svelte-fa": "^3.0.3",
		"svelte-inview": "^3.0.4",
		"svelte-markdown": "^0.2.3",
		"sveltekit-i18n": "^2.2.2",
		"vite-plugin-pwa": "^0.14.7"
	}
}
